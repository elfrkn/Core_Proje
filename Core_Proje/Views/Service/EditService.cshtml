@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<br />
@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hizmet Ekleme Paneli </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceID)
                    <div class="form-group">
                    <label>Hizmet Başlığı</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    </div>
                    <div class="form-group">
                    <label>Görsel Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    <br />
                    </div>
                    <button class="btn btn-info">Güncelleme</button>
                </form>
            </div>
        </div>
    </div>
}

