@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Ekleme Sayfası</h3>
</div>
<br />
@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hizmet Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Servis Başlığı</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        <br />
                    </div>
                    <div class="form-group">
                        <label>Görsel</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        <br />
                    </div>
                    <button class="btn btn-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}
